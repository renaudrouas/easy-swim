
<!--  Search bar -->
<div class="container">
  <div class="wrapper">
    <div class="center-form">
      <%= form_tag pools_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a pool"
      %>
      <% end %>
    </div>
  </div>
<!--  Search bar -->

  <div class="container">
    <div class= "row">
      <div class="col-sm-7">
        <div class="cards-container">
          <div class= "row">
            <% @pools.each do |pool| %>
            <div class="col-xs-12 col-sm-6">
              <div class="card-container">
                <div class="row">
                  <div class="col-xs-12">
                    <div class="card" style="background-image: url('<%= image_path "Orange-Ripple.jpg" %>');">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-5">
                    <div class="card-price text-center">
                      <h2><%= link_to pool.price, pool_path(pool) %>€</h2>
                      <p>Par personne <br>(demi-journée)</p>
                    </div>
                  </div>
                  <div class="col-xs-7">
                    <div class="card-description text-center">
                      <h2><%= link_to pool.title, pool_path(pool) %></h2>

                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <div id="map" class="col-sm-5"></div>
    </div>
  </div>




 <script>
      function initMap() {
        // Create a map object and specify the DOM element for display.
        var map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 52.5206, lng: 13.4098},
          scrollwheel: false,
          zoom: 8
        });
      }
    </script>

<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
        </script>




