<%= simple_form_for(@pool) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, placeholder: 'Pool Title', hint: 'No special characters.' %>
    <%= f.input :address, placeholder: 'Pool Address', hint: 'No special characters.' %>
    <%= f.input :dimensions, placeholder: 'Pool dimensions', hint: 'No special characters.' %>
    <%= f.input :description, placeholder: 'Pool description', hint: 'No special characters.' %>
    <%= f.input :price, placeholder: 'Pool price', hint: 'No special characters.' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
