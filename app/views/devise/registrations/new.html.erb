<h2>Sign up</h2>
<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <div class="my-form-box">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: false %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: false %>
        <%= f.input :first_name, required: true, autofocus: false %>
        <%= f.input :last_name, required: true, autofocus: false %>
        <%= f.input :address, required: true, autofocus: false %>
        <%= f.input :phone_number, required: true, autofocus: false %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>
      <div class="form-actions btn-medium">
         <%= f.button :submit, "Sign up" %>
      </div>
   <% end %>
 </div>
 </div>
</div>




